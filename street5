shell.run("flow86/tunnel-lib.lua")

local tArgs = { ... }
tArgs[0] = shell.getRunningProgram()
if #tArgs ~= 1 then
	print( "Usage: "..tArgs[0].." <length>" )
	return
end

-- Mine in a quarry pattern until we hit something we can't dig
local length = tonumber( tArgs[1] )
if length < 1 then
	print( "Street length must be positive" )
	return
end

local width = 5
local direction = "left"

turtle.select(1)

turtle.turnRight()
for n=1,width/2 do
	if not turtle.forward() then
		print( "Aborting Street in first row of "..length..". Turtle is stuck!" )
		break
	end
end

turtle.turnLeft()

local function saveForward()
	if not turtle.forward() then
		print( "Aborting Street. Turtle is stuck!" )
		return false
	end
	return true
end

for n=1,length do

	if direction == "left" then
		turtle.turnLeft()
	else
		turtle.turnRight()
	end

	for i=1,width-1 do
		turtle.digDown()
		turtle.placeDown()
		
		if not saveForward() then return end
	end

	turtle.digDown()
	turtle.placeDown()
	
	if direction == "left" then
		turtle.turnRight()
		direction = "right"
	else
		turtle.turnLeft()
		direction = "left"
	end

	if not saveForward() then return end
end

if direction == "left" then
	turtle.turnLeft()
else
	turtle.turnRight()
end

for i=1,width/2 do
	if not saveForward() then return end
end

if direction == "left" then
	turtle.turnRight()
else
	turtle.turnLeft()
end
